<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />
    <property name="LOG_PATH" value="./logs"/>

    <!-- 콘솔: 개발/검증 가독성 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36}
                [traceId:%X{traceId}] [spanId:%X{spanId}] - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- (선택) 텍스트 파일: grep/엑셀 보기 편한 포맷 -->
    <appender name="TEXT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/text/service-b.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/text/service-b.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>14</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
                ts=%d{ISO8601}, level=%level, logger=%logger{36},
                traceId=%X{traceId}, spanId=%X{spanId}, msg=%msg%n
            </pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="TEXT_FILE"/>
    </root>
</configuration>